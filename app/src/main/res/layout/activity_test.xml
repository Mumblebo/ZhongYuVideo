<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.day0121.activity.TestActivity">

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入手机号码" />

    <EditText
        android:id="@+id/et_mima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入密码" />

    <EditText
        android:id="@+id/et_invote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入邀请码" />

    <Button
        android:id="@+id/bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="题库注册" />

    <Button
        android:id="@+id/bt_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频注册" />

    <Button
        android:id="@+id/bt_ky_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="考研注册" />

    <Button
        android:id="@+id/bt_ky_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="考研登录" />
</LinearLayout>
